<odoo>
    <data noupdate="1">

        <!-- Group for Algolia Integration -->
        <record id="group_algolia_integration_user" model="res.groups">
            <field name="name">Algolia Integration User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="comment">User with access rights for Algolia integration features.</field>
        </record>

        <record id="group_algolia_integration_manager" model="res.groups">
            <field name="name">Algolia Integration Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="comment">Manager with full access rights for Algolia integration features.</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <!-- Access Control List (ACL) -->
        <record id="algolia_integration_access_user" model="ir.model.access">
            <field name="name">algolia.integration.access.user</field>
            <field name="model_id" ref="model_algolia_integration"/>
            <field name="group_id" ref="group_algolia_integration_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="algolia_integration_access_manager" model="ir.model.access">
            <field name="name">algolia.integration.access.manager</field>
            <field name="model_id" ref="model_algolia_integration"/>
            <field name="group_id" ref="group_algolia_integration_manager"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules -->
        <record id="algolia_integration_rule_user" model="ir.rule">
            <field name="name">Algolia Integration User Rule</field>
            <field name="model_id" ref="model_algolia_integration"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_algolia_integration_user'))]"/>
        </record>

        <record id="algolia_integration_rule_manager" model="ir.rule">
            <field name="name">Algolia Integration Manager Rule</field>
            <field name="model_id" ref="model_algolia_integration"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_algolia_integration_manager'))]"/>
        </record>

    </data>
</odoo>