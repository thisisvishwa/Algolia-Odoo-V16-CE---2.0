<odoo>
    <data>

        <!-- Algolia Backend Configuration Form View -->
        <record id="view_algolia_backend_config_form" model="ir.ui.view">
            <field name="name">algolia.backend.config.form</field>
            <field name="model">algolia.integration</field>
            <field name="arch" type="xml">
                <form string="Algolia Integration Configuration">
                    <sheet>
                        <group>
                            <group string="API Settings">
                                <field name="algolia_api_key" widget="password"/>
                                <field name="algolia_application_id"/>
                                <field name="algolia_index_name"/>
                            </group>
                            <group string="Synchronization Settings">
                                <field name="indexing_frequency"/>
                                <field name="synchronization_triggers"/>
                            </group>
                        </group>
                        <group string="Search Customization">
                            <field name="typo_tolerance_threshold"/>
                            <field name="search_result_order"/>
                        </group>
                        <group string="Display Settings">
                            <field name="image_size"/>
                            <field name="price_visibility"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action to Open Algolia Backend Configuration -->
        <record id="action_algolia_backend_config" model="ir.actions.act_window">
            <field name="name">Algolia Backend Configuration</field>
            <field name="res_model">algolia.integration</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_algolia_backend_config_form"/>
            <field name="target">new</field>
        </record>

        <!-- Menu Item for Algolia Backend Configuration -->
        <menuitem id="menu_algolia_backend_config"
                  name="Algolia Backend Configuration"
                  action="action_algolia_backend_config"
                  parent="base.menu_custom"
                  sequence="10"/>

    </data>
</odoo>